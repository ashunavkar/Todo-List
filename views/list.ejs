<%- include("header") %>

<div class="box" id="heading">
    <h1><%= listTitle %> </h1>

</div>
<div class="box">


    <%  newListItems.forEach(function(element){  %>
    <form action="/delete" method="POST">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%= element._id %>" onchange="this.form.submit()">
            <p> <%= element.name %> </p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>" >
    </form>
    <% }) %>


    <div class="input">
        <form class="item addForm" action="/"  method="POST">
            <input type="text" name="newItem" placeholder="What's next?" autocomplete="off">

            <button class="addButton" type="submit" name="addButton" value= <%=listTitle%>> <img class="addImage"
                    src="img/plus.png" alt="delete img"></button>
        </form>
    </div>
</div>

<%- include("footer") %>